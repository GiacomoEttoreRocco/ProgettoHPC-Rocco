#!/bin/bash

#PBS -N strongscalability_job
#PBS -q dssc_gpu
#PBS -l mem=10gb 
#PBS -l nodes=1:ppn=24
#PBS -l walltime=10:60:00
cd $PBS_O_WORKDIR
module load openmpi/4.1.2
for i in {2..24}
do
	mpirun -np $i ./ring 10000 10000 >> n10k_ring.csv
	mpirun -np $i ./mesh 10000 10000 >> n10k_mesh.csv
	mpirun -np $i ./torus_rep 10000 10000 >> n10k_torus_rep.csv 
done
exit	

#!/bin/bash

#PBS -N strongscalability_job
#PBS -q dssc_gpu
#PBS -l mem=100gb 
#PBS -l nodes=1:ppn=24
#PBS -l walltime=10:60:00
cd $PBS_O_WORKDIR
module load openmpi/4.1.2
for i in {2..24}
do
	mpirun -np $i ./ring 10000000 1000 >> 10M_ring.csv
	mpirun -np $i ./mesh 10000000 1000 >> 10M_mesh.csv
	mpirun -np $i ./torus_rep 10000000 1000 >> 10M_torus_rep.csv 
done
exit	
